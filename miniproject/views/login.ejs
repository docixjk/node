<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>시작 화면</title>
    <link rel="stylesheet" href="stylesheets/reset.css" />
    <link rel="stylesheet" href="stylesheets/초기화면.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
  </head>

  <body>
    <div id="container">
      <div id="imgno" style="width: 100%; height: 100%"></div>
      <div id="start"><a href="http://localhost:3000/lostark">START</a></div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.3.min.js"
      integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
      crossorigin="anonymous"
    ></script>
    <script>
      let random_img;
      function randomImg() {
        for (let i = 1; i <= 5; i++) {
          random_img = parseInt(Math.ceil(Math.random() * 5));
          if (random_img == 6) {
            random_img--;
          } else {
            imgno.innerHTML = `<img style="width: 100%; height: 100%" class="img_l" src="images/proimg/${random_img}.jpg" />`;
          }
        }
      }
      randomImg();
      setInterval(() => {
        randomImg();
      }, 1500);
    </script>
  </body>
</html>
